<?xml version="1.0" encoding="utf-8"?>
<!-- Use DrawerLayout as root container for activity -->
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">



    <!-- Layout to contain contents of main body of screen (drawer will slide over this) -->

    <!-- Container for contents of drawer - use NavigationView to make configuration easier -->

    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <View
            android:id="@+id/viewMenu"
            android:layout_width="wrap_content"
            android:layout_height="461dp"
            android:layout_marginTop="0dp"
            android:background="@color/colorPrimary" />


        <TableLayout
            android:id="@+id/tableLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="40dp"
            >

            <TableRow
                android:id="@+id/tableRowStockTitles"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginVertical="10dp"
                android:clickable="true"
                android:onClick="onClick">

                <TextView
                    android:id="@+id/textViewStockName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text=""
                    android:textColor="@color/colorAccent"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/textViewStock1Current"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Current"
                    android:textColor="@color/colorAccent"

                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/textViewStock1Next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Predicted"
                    android:textColor="@color/colorAccent"

                    android:textSize="20dp" />


            </TableRow>

            <TableRow
                android:id="@+id/tableRowStock1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginVertical="10dp"
                android:background="@drawable/textlines"
                android:clickable="true"
                android:onClick="onClick">

                <TextView
                    android:id="@+id/textViewStock1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="FB"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/textViewStock1Prev"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="+3.18"

                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/textViewStock1Aftr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="+4.00"

                    android:textSize="20dp" />


            </TableRow>

            <TableRow
                android:id="@+id/tableRowStock2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginVertical="10dp"
                android:background="@drawable/textlines"
                android:clickable="true"
                android:onClick="onClick">

                <TextView
                    android:id="@+id/textViewStock2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="GOOGL"

                    android:textColor="@color/colorPrimary"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/textViewStock2Prev"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="+17.51"

                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/textViewStock2Aftr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="+18.00"

                    android:textSize="20dp" />

            </TableRow>

            <TableRow
                android:id="@+id/tableRowStock3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginVertical="10dp"
                android:clickable="true"
                android:background="@drawable/textlines"
                android:onClick="onClick">

                <TextView
                    android:id="@+id/textViewStock3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="AMZN"

                    android:textColor="@color/colorPrimary"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/textViewStock3Prev"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="+15.64"

                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/textViewStock3Aftr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="-15.10"

                    android:textSize="20dp" />


            </TableRow>

            <TableRow
                android:id="@+id/tableRowStock4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginVertical="10dp"
                android:clickable="true"
                android:background="@drawable/textlines"
                android:onClick="onClick">

                <TextView
                    android:id="@+id/textViewStock4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="NFLX"

                    android:textColor="@color/colorPrimary"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/textViewStock4Prev"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="-12.42"

                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/textViewStock4Aftr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="+12.22"

                    android:textSize="20dp" />


            </TableRow>

            <TableRow
                android:id="@+id/tableRowStock5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginVertical="10dp"
                android:clickable="true"
                android:background="@drawable/textlines"
                android:onClick="onClick">

                <TextView
                    android:id="@+id/textViewStock5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="NTDOY"

                    android:textColor="@color/colorPrimary"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/textViewStock5Prev"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="+0.19"

                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/textViewStock5Aftr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="+0.21"

                    android:textSize="20dp" />


            </TableRow>
        </TableLayout>

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:titleTextColor="@color/colorAccent"
            app:title="FinTech"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar" />

        <android.support.constraint.ConstraintLayout
            android:id="@+id/stockDetails"
            android:layout_width="match_parent"
            android:layout_height="233dp"
            android:layout_marginTop="470dp">


            <TextView
                android:id="@+id/stockName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text=""
                android:textSize="28dp"
                android:textColor="#000"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </android.support.constraint.ConstraintLayout>

    </FrameLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:menu="@menu/drawer_view"
        app:headerLayout="@layout/nav_header" />

</android.support.v4.widget.DrawerLayout>